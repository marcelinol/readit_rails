<!DOCTYPE html>
<html>
<head>
  <title>ReaditRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row mdl-color--indigo-700 mdl-color-text--white">
        <!-- Title -->
        <span class='mdl-layout-title'>Read It!</span>
      </div>
      <!-- Tabs -->
      <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <a href="#" class="mdl-layout__tab is-active">Articles</a>
        <a href="#" class="mdl-layout__tab">Videos</a>
      </div>
    </header>

    <%= yield %>
  </div>
</body>
</html>
