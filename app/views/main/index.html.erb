<h1>READ IT!</h1>

<h2>Articles</h2>
<div class="mdl-grid">

  <% @recommendations[:articles].each do |article| %>
    <div class="mdl-cell mdl-cell--4-col">
      <div class="mdl-card mdl-shadow--4dp">
        <div class="mdl-card__title mdl-card--border">
          <h2 class='mdl-card__title-text'><%= article.title %></h2>
        </div>
        <!-- <div class="mdl-card__media">
          <%# article.image %>
        </div> -->
        <div class="mdl-card__supporting-text">
          here you will read the description
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' href="<%= article.address %>" target="_blank">Read It!</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h2>Videos</h2>
<% @recommendations[:videos].each do |video| %>
  <li><a href="<%= video.address %>" target="_blank"><%= video.title %></a></li>
<% end %>
