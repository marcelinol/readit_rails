<div class="mdl-cell mdl-cell--4-col">
  <div class="article-card mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title mdl-card--border mdl-color--indigo-A700 mdl-color-text--white">
      <span class='mdl-card__title-text'><%= article.title.capitalize %></span>
    </div>
    <div class="mdl-card__media">
      <%= image_tag(article.image, size: '330x220') if article.image %>
    </div>
    <div class="mdl-card__supporting-text">
      <%= article.description %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' href="<%= article.address %>" target="_blank">Read It!</a>
    </div>
  </div>
</div>
