<div class='mdl-layout mdl-js-layout mdl-color--grey-100 custom-form'>
  <main class='mdl-layout__content'>
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">Welcome aboard!</h2>
      </div>
      <%= simple_form_for @user, url: create_user_path do |f| %>
        <div class="mdl-card__supporting-text">
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.input :name, input_html: { class: 'mdl-textfield__input', id: 'user-name' }, label_html: { class: 'mdl-textfield__label', for: 'user-name' }, required: true  %>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.input :email, required: true, as: :email, input_html: { class: 'mdl-textfield__input', id: 'user-email' }, label_html: { class: 'mdl-textfield__label', for: 'user-email' } %>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.input :password, required: true, input_html: { class: 'mdl-textfield__input' }, label_html: { class: 'mdl-textfield__label' } %>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.input :password_confirmation, required: true, input_html: { class: 'mdl-textfield__input' }, label_html: { class: 'mdl-textfield__label' } %>
          </div>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= f.button :submit, class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
        </div>
      <% end %>
    </div>
  </main>
</div>

<style>
  .custom-form {
  	align-items: center;
    justify-content: center;
  }
</style>

